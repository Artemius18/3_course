@page
@model L4.Pages.LinksModel

@{
    ViewData["Title"] = "Link";
}

<div>
    <h1>@Html.DisplayFor(model => model.Link.Url)</h1>
    <p style="margin: 10px 0;">Tags: @Html.DisplayFor(model => model.Link.Description)</p>
     @if (Utils.IsAdministrator(this.HttpContext))
    {
        <div>
            <form method="post" class="d-inline-block" style="display: inline-block">
            <button type="submit" class="btn btn-danger" asp-page-handler="OnMinus" asp-route-id="@Model.Link.Id">-@Html.DisplayFor(model => model.Link.Minus)</button>
        </form>
        <form method="post" class="d-inline-block" style="display: inline-block">
            <button type="submit" class="btn btn-success" asp-page-handler="OnPlus" asp-route-id="@Model.Link.Id">+@Html.DisplayFor(model => model.Link.Plus)</button>
        </form>
    </div>
    }
    <div id="createCommentForm" style="margin: 20px 0 20px 0;">
        <div class="col-md-4">
            <h4>Add comment</h4>
            <form method="post" asp-page-handler="CreateComment" asp-route-id="@Model.Link.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Link.Id" />
                <div class="form-group" style="margin: 10px 0;">
                    <input asp-for="Comment.ComText" required class="form-control" />
                    <span asp-validation-for="Comment.ComText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Publish" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <h4 style="margin: 20px 0 0 0;">Comments</h4>
    <div class="row">
        <div class="col-md-12">
            <table class="table" style="margin: 10px 0 0 0;">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Comment</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Link.WSRefComments)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Stamp)</td>
                            <td>@Html.DisplayFor(modelItem => item.ComText)</td>
                            <td>
                                @if (Utils.OwnsComment(this.HttpContext, item) || Utils.IsAdministrator(this.HttpContext))
                                {
                                    <div class="d-flex align-items-center">
                                        <form method="post" asp-page-handler="DeleteComment" asp-route-id="@Model.Link.Id" style="margin: 5px;">
                                            <input type="hidden" name="commentId" value="@item.Id" />
                                            <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                                        </form>
                                        <button type="button" class="btn btn-success mr-2" onclick="toggleEditForm('@item.Id')" style="margin: 5px;">Edit</button>
                                    </div>
                                    <div id="editForm_@item.Id" style="display: none;">
                                        <div class="col-md-4">
                                            <form method="post" asp-page-handler="EditComment" asp-route-id="@Model.Link.Id" style="margin: 5px 0;">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input type="hidden" name="commentId" value="@item.Id" />
                                                <div class="form-group">
                                                    <input asp-for="NewCommentText" class="form-control" value="@item.ComText" required style="margin: 10px 0 10px 0;" />
                                                    <span asp-validation-for="NewCommentText" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Save changes" class="btn btn-primary" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleEditForm(commentId) {
            var editForm = document.getElementById('editForm_' + commentId);
            if (editForm.style.display === 'none') {
                editForm.style.display = 'block';
            } else {
                editForm.style.display = 'none';
            }
        }
    </script>
}